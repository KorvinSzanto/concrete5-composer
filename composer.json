{
  "name": "concrete5/composer",
  "description": "concrete5 composer based installation",
  "type": "project",
  "minimum-stability": "dev",
  "license": "MIT",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/olsgreen/concrete5.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/c5labs/concrete5-core-installer.git"
    }
  ],
  "require": {
    "c5labs/concrete5-core-installer": "dev-master",
    "concrete5/concrete5": "dev-core-type"
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "installer-paths": {
      "public/concrete": ["type:concrete5-core"],
      "public/application/themes/{$name}": ["type:concrete5-theme"],
      "public/packages/{$name}": ["type:concrete5-package"],
      "public/application/blocks/{$name}": ["type:concrete5-block"]
    },
    "scaffolder": {
      "exclude-paths": [
        "application/bootstrap/autoload.php"
      ]
    }
  }
}
